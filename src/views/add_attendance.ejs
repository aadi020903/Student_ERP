    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Attendance</h5>

              <!-- General Form Elements -->
              <div class="card">
                <div class="card-header">
              <form class="row g-3 needs-validation" novalidate action="add_attendance" method="get">
                <div class="col-md-4">
                  <label for="validationCustom01" class="form-label"> Name</label>
                  <input type="text" class="form-control" id="validationCustom01" value="" name="filtername" placeholder="Search by Name">
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
          
                <div class="col-md-4">
                  <label for="validationCustom02" class="form-label">student Id</label>
                  <input type="text" class="form-control" id="validationCustom02" value="" name="filtersid" placeholder="Search by sid">
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="validationCustom02" class="form-label">Class</label>
                  <input type="text" class="form-control" id="validationCustom02" value="" name="filterclass" placeholder="Search by Class">
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
               
              
                <div class="col-md-6 text-center">
                  <button type="submit" class="btn btn-primary">Search</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- End Custom Styled Validation -->
              </div></div>
              
              
            
            
            
            
              <section class="section">
              <div class="row">
                <div class="col-lg-12">
                  
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Students</h5>
                      <form action="submitAttendance" method="post"> 
                       <div >
                        <div class="col-md-4">
                        <label for="inputDate" class="col-form-label">Select Date</label>
                        <div class="col-sm-6">
                          <input type="date" class="form-control" name="selectedDate">
                        </div>
                       </div>
                     

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                          
                   
                          <thead>
                            <tr>
                              <th scope="col">S No.</th>
                              <th scope="col">sid</th>
                              <th scope="col">Student Name</th>
    
                              <th scope="col">Class</th>
                              <th scope="col">Attendance</th>
                              
                            
                            </tr>
                          </thead>
                          <tbody>
                            <%let i=1; %>
               
                            <% data.forEach((dataobj)=>{ %>
                             %>
                            <tr>
                              <th scope="row"><%= i %></th>
                              <td><%= dataobj.sid %></td>
                              <td><%= dataobj.name %></td> <!-- Add this line to display the student's name -->
                  
                            
                              <td><%=dataobj.class%></td>
                             
                              <%i++%>
                          
                              <td>
                               
                                  <fieldset class="row mb-3">
                                    <div class="col-sm-10">
                                      <div class="form-check">
                                        <input class="form-check-input" type="radio" name="attendance_<%=dataobj.sid%>_<%=dataobj.class%>" id="absent_<%= i %>" value="Absent" checked>
                                        <label class="form-check-label" for="absent_<%= i %>">Absent</label>
                                      </div>
                                      <div class="form-check">
                                        
                                        <input class="form-check-input" type="radio" name="attendance_<%=dataobj.sid%>_<%=dataobj.class%>"  id="present_<%= i %>" value="Present">
                                        <label class="form-check-label" for="present_<%= i %>">Present</label>
                                      </div>
                                    </div>
                                  </fieldset>
                              
                              </td>
                              </form>
                            </tr>
                          <% })%>
                          </tbody>
                        </table>
                        <div class="text-center">

                        <button type="submit" class="btn btn-primary">Submit Attendance</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                       </div>
                      </form><!-- End General Form Elements -->
                        <!-- End Table with stripped rows -->
                
                      </div>
                    </div>
          
