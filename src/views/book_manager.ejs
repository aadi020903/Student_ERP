  <main id="main" class="main">
   
    <div class="pagetitle">
      <h1>User Manager</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="admin_dashboard">Books Manager</a></li>
          <li class="breadcrumb-item">Books</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    
    <div class="card">
      <div class="card-header">
    <form class="row g-3 needs-validation" novalidate action="book_manager" method="get">
      <div class="col-md-6">
        <label for="validationCustom01" class="form-label">Book Name</label>
        <input type="text" class="form-control" id="validationCustom01" value="" name="filterBooktitle" placeholder="Search by Book Name">
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-6">
        <label for="validationCustom01" class="form-label">ISBN no.</label>
        <input type="text" class="form-control" id="validationCustom01" value="" name="filterISBN" placeholder="Search by ISBN no.">
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>


      <div class="col-md-6">
        <label for="validationCustom02" class="form-label">Author Name</label>
        <input type="text" class="form-control" id="validationCustom02" value="" name="filterauthorname" placeholder="Search by Auther Name">
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-3">
        <label for="validationDefault04" class="form-label">Status</label>
        <select class="form-select" id="validationDefault04" name="filterStatus">
          <option selected disabled value="">Choose...</option>
          <option value="Active">Active</option>
          <option value="Blocked">Blocked</option>
        </select>
      </div>
      <div class="col-md-6">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
      </div>
    </form><!-- End Custom Styled Validation -->
    </div></div>

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h1 class="card-title">User Manager</h1>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">S No.</th>
                    <th scope="col">Book Title</th>
                    <th scope="col">ISBN No.</th>
                    <th scope="col">Auther Name</th>
                    <th scope="col">Total Copies</th>
                    <th scope="col">Available Copies</th>
                    <th scope="col">Status</th>
                    <th scope="col">Duration</th>
                  </tr>
                </thead>
                
                <tbody>
                  <%let i=1; %>
                  <% for (let dataobj of data){
                   %>
                  <tr>
                    <th scope="row"><%=i%></th>
                    <td><%=dataobj.booktitle%></td>
                    <td><%=dataobj.ISBN%></td>
                    <td><%=dataobj.authorname%></td>
                    <td><%=dataobj.totalcopies%></td>
                    <td><%=dataobj.availablecopies%></td>
                    <td><%=dataobj.status%></td>
                    
                   
                    <%id=dataobj._id.toString(); %>
                    <td>
                        <form  action= "/user_update" method="post">
                    
                      <input type="hidden" name="id" value="<%=id%>" />
                      <% let status2 = dataobj.status.localeCompare("Blocked") %>
                      <% if(status2 == 0)
                      { %>
                        <button type="submit"value="update" class="btn btn-primary">Activate</button></td>
                      <% } 
                      else { %>
                        <button type="submit"value="update" class="btn btn-secondary">Block</button></td>
                      <% }
                      %>
                      
                    </form>
                  </tr>
                <%
                i=i+1;
              
              }%>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
    
