<body>
  <%- include("../../utils/header")%>
  
 
  <%- include("../../utils/sidebar")%>
  



  

  <main id="main" class="main">
   
    <div class="pagetitle">
      <h1>View All Teachers</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="admin_dashboard">Home</a></li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h1 class="card-title">User Manager</h1>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">S No.</th>
                    <th scope="col">Teacher Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Class</th>
                    <th scope="col">Status</th>
                  </tr>
                </thead>
                
                <tbody>
                  <%let i=1; %>
                  <% for (let dataobj of teacher_data){
                   %>
                  <tr>
                    <th scope="row"><%=i%></th>
                    <td><%=dataobj.teacher_name%></td>
                    <td><%=dataobj.email%></td>
                    <td><%=dataobj.mobile%></td>
                    <td><%=dataobj.assigned_class%></td>
                    <td><%=dataobj.status%></td>
                    
                    <%id=dataobj._id.toString();%>
                    <td>
                        <form  action= "/api/teacher_update?pageName=Status" method="post">
                    
                      <input type="hidden" name="id" value="<%=id%>" />
                      <% let status2 = dataobj.status.localeCompare("Blocked") %>
                      <% if(status2 == 0)
                      { %>
                        <a href="teacher_update?id=<%=id%>">Teacher Update</a>
                        <button type="submit"value="update">Activate</button></td>
                      <% } 
                      else { %>
                        <a href="teacher_update?id=<%=id%>">Teacher Update</a>
                        <button type="submit"value="update">Block</button></td>
                      <% }
                      %>
                    </form>

                  </tr>
                <%
                i=i+1;
              
              }%>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
    
