  <!-- Add this script to handle dynamic visibility of input fields -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Get the select element
      var filterSelect = document.getElementById('filtername');

      // Get the input elements and labels
      var classInput = document.getElementById('class');
      var classLabel = document.querySelector('[for="class"]');
      var SIDInput = document.getElementById('SID');
      var SIDLabel = document.querySelector('[for="SID"]');

      var teacherInput = document.getElementById('teacherId');
      var teacherLabel = document.querySelector('[for="teacherId"]');

      // Function to update input visibility based on the selected option
      function updateInputVisibility() {
        var selectedOption = filterSelect.value;

        // Reset input visibility
        classInput.style.display = 'block';
        classLabel.style.display = 'block';
        SIDInput.style.display = 'block';
        SIDLabel.style.display = 'block';

        teacherInput.style.display = 'block';
        teacherLabel.style.display = 'block';

        // Update input visibility based on the selected option
        if (selectedOption === 'select') {
          classInput.style.display = 'none';
          classLabel.style.display = 'none';
          SIDInput.style.display = 'none';
          SIDLabel.style.display = 'none';

          teacherInput.style.display = 'none';
          teacherLabel.style.display = 'none';

        } else if (selectedOption === 'Class') {
          SIDInput.style.display = 'none';
          SIDLabel.style.display = 'none';
          teacherInput.style.display = 'none';
          teacherLabel.style.display = 'none';
        } else if (selectedOption === 'Student') {
          classInput.style.display = 'none';
          classLabel.style.display = 'none';
          teacherInput.style.display = 'none';
          teacherLabel.style.display = 'none';
        }else if (selectedOption === 'Everyone') {
          classInput.style.display = 'none';
          classLabel.style.display = 'none';
          teacherInput.style.display = 'none';
          teacherLabel.style.display = 'none';
          SIDInput.style.display = 'none';
          SIDLabel.style.display = 'none';
        } else if (selectedOption === 'allTeachers') {
          classInput.style.display = 'none';
          classLabel.style.display = 'none';
          SIDInput.style.display = 'none';
          SIDLabel.style.display = 'none';
          teacherInput.style.display = 'none';
          teacherLabel.style.display = 'none';
        } else if (selectedOption === 'particularTeacher') {
          classInput.style.display = 'none';
          classLabel.style.display = 'none';
          SIDInput.style.display = 'none';
          SIDLabel.style.display = 'none';
        }
        
      }

      // Attach the function to the change event of the select element
      filterSelect.addEventListener('change', updateInputVisibility);

      // Initial update based on the default selected option
      updateInputVisibility();
    });
  </script>
