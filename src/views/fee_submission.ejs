    <style>
      .hidden {
        display: none;
      }

      .select {
        padding: 10px;
        width: 100%;
        margin-bottom: 10px;
        border-radius: 50vh;
      }
      .Btn {
        width: 155px;
        font-weight: 600;
        height: 45px;
        border-radius: 50vh;
        color: #383838;
        background: linear-gradient(
          -50deg,
          rgb(36 36 6),
          rgb(243 244 0),
          rgb(125 119 0)
        );
        background-size: 250%;
        background-position: left;
        border: 1.5px blue;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: relative;
        transition-duration: 0.5s;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.11);
      }
      .Btn2 {
        color: #000000;
        width: 155px;
        font-weight: 600;
        height: 45px;
        border-radius: 50vh;
        color: #383838;
        background: linear-gradient(
          -175deg,
          rgb(0 0 0),
          rgba(102, 255, 99, 0.839),
          rgb(0 0 0)
        );
        background-size: 250%;
        background-position: left;
        border: 1.5px blue;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: default;
        position: relative;
        transition-duration: 0.5s;
        box-shadow: inset 2px 2px 10px rgba(0, 0, 0, 0.11);
      }
      .Btn:hover {
        background-position: right;
        transition-duration: 0.6s;
      }
      .Btn2:hover {
        background-position: right;
        transition-duration: 0.6s;
        cursor: pointer;
      }

      .logoIcon {
        fill: rgb(255, 209, 5);
        font-size: 20px;
      }

      .tooltip {
        position: absolute;
        top: -20px;
        opacity: 0;
        background: linear-gradient(to right, rgb(39, 107, 255), rgb(0, 0, 0));
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition-duration: 0.2s;
        pointer-events: none;
        letter-spacing: 0.5px;
      }

      .tooltip::before {
        position: absolute;
        content: "";
        width: 10px;
        height: 10px;
        background: linear-gradient(
          45deg,
          rgb(39, 107, 255),
          rgb(108, 184, 255)
        );
        background-size: 1000%;
        background-position: center;
        transform: rotate(45deg);
        bottom: -15%;
        transition-duration: 0.3s;
      }

      .Btn:hover .tooltip {
        top: -50px;
        opacity: 1;
        transition-duration: 0.3s;
      }

      /* .hr{
        width: 30vw;
