  <body>
    <!-- ======= Header ======= -->

    <%- include("../../utils/header")%>

    <!-- ======= End Header ======= -->

    <!-- ======= Sidebar ======= -->

    <%- include("../../utils/sidebar")%>

    <!-- End Sidebar-->

    <main id="main" class="main">
      <div class="pagetitle">
        <h1>Student Account Details</h1>
        <nav>
          <!-- <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item">Tables</li>
                            <li class="breadcrumb-item active">Data</li>
                        </ol> -->
        </nav>
      </div>
      <!-- End Page Title -->

      <!-- <form action="/fee_submitted" method="post"> -->
      <section class="section">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <br class="card-body" />
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">SID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Father's Name</th>
                    <th scope="col">Fees</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((student)=> { %>
                  <tr>
                    <td scope="row" class="col-md-2"><%= student.sid %></td>
                    <td scope="row" class="col-md-2"><%= student.name %></td>
                    <td scope="row" class="col-md-2">
                      <%= student.fatherName %>
                    </td>
                    <td scope="row">
                      <select
                        class="select"
                        name="name"
                        id="name_<%= student.sid %>"
                        onclick="showQuarters('<%= student.sid %>')"
                      >
                        <option value="Quarters">
                          <%= student.year%> Quarters
                        </option>
                        <!-- Add more options if needed -->
                      </select>
                      <div id="<%= student.sid %>_quarters" class="hidden">
                        <% student.quarters.forEach((quarter)=> { %>
                        <div>
                          Quarter <%= quarter.quarterNumber %>
                          <ul
                            class="d-flex justify-content-between align-bottom"
                          >
                            <div>
                              <% quarter.feeHeads.forEach((head)=> { %>
                              <li><%= head.name %> - <%= head.amount %></li>
                              <% }) %>
                            </div>
                            <% if (quarter.status==='paid' ) { %>
                            <button class="h-10 Btn2">Paid</button>
                            <% } else { %>
                            <form action="/api/fee_submitted" method="post">
                              <!-- Hidden inputs for student and quarter IDs -->
                              <input
                                type="hidden"
                                name="student_id"
                                value="<%= student.sid %>"
                              />
                              <input
                                type="hidden"
                                name="quarter_number"
                                value="<%= quarter.quarterNumber %>"
                              />
                              <button class="Btn h-10" type="submit">
                                Pending
                                <span class="tooltip">Pay Now</span>
                              </button>
                            </form>
                            <% } %>
                          </ul>
                          <hr />
                        </div>
                        <% }) %>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
            </div>
          </div>
        </div>
      </section>

      <!-- </form> -->
    </main>
    <!-- End #main -->

